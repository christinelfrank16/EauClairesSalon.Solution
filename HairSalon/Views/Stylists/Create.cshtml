@{
    ViewData["Title"] = "Add a Styalist";
    Layout = "_Layout";
}

@model HairSalon.Models.Stylist;
<h3>Add a new Stylist</h3>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(model => model.Name)
        @Html.TextBoxFor(model => model.Name) 
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.PriceRating)
        @Html.TextBoxFor(model => model.PriceRating) 
    </div>

    <input type="submit" value="Add new stylist" />
}