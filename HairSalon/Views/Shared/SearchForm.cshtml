<form id="search" class="mr-auto" action="/Search" method="post">
    <div class="form-inline">
        <input id="searchInput" name="searchInput" class="form-control" type="text" placeholder="Search All" aria-label="Search">
        <button id="search-btn" class="btn btn-outline-dark" type="submit"><i class="fa fa-search"></i></button>
    </div>
    <label><b>Search By</b>:</label>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="searchType" id="search1" value="stylist" checked>
        <label class="form-check-label" for="search1">Stylist</label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="searchType" id="search2" value="client">
        <label class="form-check-label" for="search2">Client</label>
    </div>
</form>